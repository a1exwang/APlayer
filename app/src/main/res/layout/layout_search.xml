<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSearchContent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnSearchSearch"
        android:layout_above="@+id/resultViewSearch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/btnSearchSearch"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.iced.alexwang.views.search_result.SearchResultView"
        android:id="@+id/resultViewSearch"
        android:layout_below="@+id/btnSearchSearch"
        android:layout_alignParentStart="true" />

</RelativeLayout>