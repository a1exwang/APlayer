
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.iced.alexwang.activities.SelectFileActivity"
        android:id="@+id/listSelectFile"
        android:layout_toStartOf="@+id/btnSelectFileReverse"
        android:layout_above="@+id/btnSelectFileReverse"
        android:layout_alignEnd="@+id/btnSelectFileReverse"
        android:layout_below="@+id/textSelectFileCurrentPath">

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/btnSelectFilePlayAll"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnSelectFileAddAll"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnSelectFilePlayAll" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All"
        android:id="@+id/btnSelectFileSelectAll"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnSelectFileAddAll" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/btnSelectFileUnselectAll"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btnSelectFileReverse" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inverse"
        android:id="@+id/btnSelectFileReverse"
        android:layout_above="@+id/btnSelectFileSelectAll"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnSelectFileSelectAll" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/btnSortByFileName"
        android:layout_alignTop="@+id/btnSelectFileReverse"
        android:layout_alignStart="@+id/btnSelectFileSelectAll"
        android:layout_alignEnd="@+id/btnSelectFileSelectAll" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/btnSortByDate"
        android:layout_below="@+id/listSelectFile"
        android:layout_toEndOf="@+id/btnSelectFilePlayAll" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foobar"
        android:id="@+id/btnFoorbar"
        android:layout_alignTop="@+id/btnSortByDate"
        android:layout_toStartOf="@+id/btnSelectFileAddAll" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current Path"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/textSelectFileCurrentPath"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnSelectFileReverse" />

</RelativeLayout>

