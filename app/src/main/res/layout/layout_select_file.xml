
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.iced.alexwang.activities.SelectFileActivity"
        android:id="@+id/listSelectFile"
        android:layout_above="@+id/btnFileSelectPlayAll">

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play All"
        android:id="@+id/btnFileSelectPlayAll"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add All"
        android:id="@+id/btnFileSelectAddAll"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnFileSelectPlayAll" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnFileSelectSave"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnFileSelectAddAll" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/btnSelectFileClear"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnFileSelectSave" />
</RelativeLayout>

